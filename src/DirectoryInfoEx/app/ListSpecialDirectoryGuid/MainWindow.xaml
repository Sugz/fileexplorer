<Window x:Class="ListSpecialDirectoryGuid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="700" Width="525">
    <Grid>
        <TabControl>
            <TabItem Header="CSIDL">
                <TextBox x:Name="tbCSIDL" VerticalScrollBarVisibility="Auto" />
            </TabItem>
            <TabItem Header="KnownFolder">
                <TextBox x:Name="tbKnownFolder" VerticalScrollBarVisibility="Auto" />
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
